{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card" style="background-color: cyan;">
    <div class="card-body">
        <h4>Nova postagem</h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control">
            <label for="titulo">Slug: </label>
            <input type="text" name="slug" class="form-control">
            <label for="titulo">Descrição: </label>
            <input type="text" name="descricao" class="form-control">
            <label for="titulo">Conteudo: </label>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="titulo">Categoria: </label>
            <select name="categoria" class="custom-select">
                <option value="0"></option>
                <!-- Aqui utilizamos o "each" para chamar as categorias salvas e usarmos no nosso select box -->
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-2" type="submit">Criar postagem</button>
        </form>
    </div>
</div>